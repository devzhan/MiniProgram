/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.bg_black {

  height: 200rpx;
  background: lightskyblue;

}
.bg_red {

  height: 200rpx;
  background: lightpink;

}
.page { 
display: flex;
flex-direction: column;
height: 100%;
}
.navbar{
  flex: none;
  display: flex;
  height: 100%;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}
.navbar .item.active{
  color: #fc0
}
.navbar.item.active:after{
content: "";
display: block;
position: absolute;
bottom: 0;
left: 0;
right: 0;
height: 4rpx;
background: #fc0;
}